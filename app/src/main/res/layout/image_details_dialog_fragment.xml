<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:background="@color/image_details_dialog_background_color">

    <ImageView
        android:id="@+id/detail_dialog_close_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/detail_dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_dialog_close_button"
        android:layout_centerHorizontal="true"
        android:background="#808080"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detail_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="#000000"
        android:layout_below="@id/detail_dialog_image"/>


</RelativeLayout>